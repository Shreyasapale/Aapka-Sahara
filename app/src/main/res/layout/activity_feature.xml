<LinearLayout android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/reminders_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:outlineProvider="background"
                android:outlineAmbientShadowColor="@android:color/black"
                android:outlineSpotShadowColor="@android:color/black"
                android:background="#B5FAE4FC"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"/>

                <ImageView
                    android:id="@+id/RemindersImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    app:srcCompat="@drawable/ic_reminders" />

                <TextView
                    android:layout_alignBottom="@id/RemindersImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:background="#156CDD"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"
                    android:text="REMINDERS"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reports_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:outlineProvider="background"
                android:outlineAmbientShadowColor="@android:color/black"
                android:outlineSpotShadowColor="@android:color/black"
                android:background="#f2fde4"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"/>

                <ImageView
                    android:id="@+id/ReportsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_reports"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_alignBottom="@id/ReportsImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:background="#156CDD"
                    android:textColor="@android:color/white"
                    android:text="REPORTS"/>


            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"/>

            <RelativeLayout
                android:id="@+id/sos_icon"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:outlineProvider="background"
                android:outlineAmbientShadowColor="@android:color/black"
                android:outlineSpotShadowColor="@android:color/black"
                android:elevation="5dp"
                android:layout_weight="1"
                android:background="#eee6ff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"/>

                <ImageView
                    android:id="@+id/SOSImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_sos"
                    android:layout_weight="1"/>
                />
                <TextView
                    android:layout_alignBottom="@id/SOSImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:background="#156CDD"
                    android:textColor="@android:color/white"
                    android:text="SOS"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/blogs_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:outlineProvider="background"
                android:outlineAmbientShadowColor="@android:color/black"
                android:outlineSpotShadowColor="@android:color/black"
                android:background="#fbe2f0"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"/>

                <ImageView
                    android:id="@+id/BlogsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_blogs"
                    android:layout_weight="1"/>
                />

                <TextView
                    android:layout_alignBottom="@id/BlogsImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:background="#156CDD"
                    android:textColor="@android:color/white"
                    android:text="BLOGS"/>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

